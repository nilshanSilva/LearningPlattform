        <div class="form-group">
            <div class="col-md-10">
                <label for="file">Upload Video:</label><input type="file" name="file" id="file" />  
            </div>
        </div>


                  @*<label for="file">Upload Image</label>
                  <input type="file" name="file" id="file" accept="image/jpeg,image"/>?<br><br>
                  <input type="submit" value="Upload Image"/>
                  <br><br>
              @ViewBag.Message*@

                  

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

