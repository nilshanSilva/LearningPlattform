@model IEnumerable<LearningPlattform.Models.Course>

@{
    ViewBag.Title = "Index";
}

<style>
        .pb-video-container {
                padding-top: 20px;
                background: #bdc3c7;
                font-family: Lato;

    }

        .pb-video {
                border: 1px solid #e6e6e6;
                padding: 5px;

    }

            .pb-video:hover {
                    background: #2c3e50;

    }

        .pb-video-frame {
                transition: width 2s, height 2s;

    }

            .pb-video-frame:hover {
                    height: 300px;

    }

        .pb-row {
                margin-bottom: 10px;

    }

        .menu-link {
              height:50px;

    }
</style>



@foreach (var item in Model)
{
<div class="row">
    <div class="container-fluid pb-video-container">
        <div class="col-md-4">
            <div class="row pb-row">
                <div class="col-md-12 pb-video">
                    <iframe class="pb-video-frame" width="100%" height="230" src="https://www.youtube.com/embed/K68UrdUOr2Y?list=RDzuAcaBkcYGE?ecver=1" frameborder="0" allowfullscreen></iframe>
                    <label class="form-control label-warning text-xs-center">Claydee - Alena</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h2>@Html.DisplayFor(modelItem => item.Description)</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
</div>
}
