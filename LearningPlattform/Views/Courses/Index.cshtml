@model IEnumerable<LearningPlattform.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Courses</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<style>
    .pb-video-container {
        padding-top: 20px;
        background: #fefeff;
        /*background: #bdc3c7*/
        font-family: Lato;
    }

    .pb-video {
        border: 1px solid #e6e6e6;
        padding: 5px;
    }

        .pb-video:hover {
            background: #2c3e50;
        }

    .pb-video-frame {
        transition: width 2s, height 2s;
    }

        .pb-video-frame:hover {
            height: 200px;
        }

    .pb-row {
        margin-bottom: 10px;
    }

    .menu-link {
        height: 50px;
    }
</style>
@foreach (var item in Model)
{ 
    <div class="row">
        <div class="container-fluid pb-video-container">
            <div class="col-md-4">
                <img src="@item.ImagePath" width="100%" height="150" class="img-thumbnail" alt="Cinque Terre">
                <label class="form-control label-warning text-xs-center">@item.Name</label>
            </div>
            <div class="col-md-8">
                <h2>@Html.ActionLink(item.Name, "Details", new { Id = item.Id }, null)</h2>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>
            </div>
       </div> @*/pb-video-container*@
    </div> 
}

